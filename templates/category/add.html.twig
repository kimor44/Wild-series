{% extends 'base.html.twig' %}

{% block title %}Add Categories | Wild Series{% endblock %}

{% block body %}
    <div class="container">
        <h2>Ajouter une cat√©gorie</h2>
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        <button type="submit" name="btnAdd" class="btn btn-primary">Ajouter</button>
        {{ form_end(form) }}
        <hr>
        <p>
        <ul>
            {% for category in categories %}
                <li>{{ category.name }}</li>
                <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-primary">show</a>
                <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-secondary">edit</a>
            {% endfor %}
        </ul>
        </p>
    </div>
{% endblock %}
