{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Séries de la catégorie : {{ category.name }} ({{ category.id }})</h1>

        {% for program in programs %}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">
                        {{ program.id }} - {{ program.title }}
                    </h3>
                    <p class="card-text">
                        {{ program.summary }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}