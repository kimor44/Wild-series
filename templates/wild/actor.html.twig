{% extends 'base.html.twig' %}
{% block title %}Actor{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="actor-name">{{ actor.name }}</h2>
        <h4>Séries associées</h4>
        {% for program in programs %}
            <div class="row">
                <div class="col-lg-6">
                    <img src="{{ program.poster }}" alt="img" class="img-fluid">
                </div>
                <div class="col-lg-6">
                    <h3>{{ program.title }}</h3>
                    <p>{{ program.summary }}<br>
                        <a href="{{ path('program_show', {slug: program.slug}) }}" class="btn btn-primary stretched-link">Voir la série</a>
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
