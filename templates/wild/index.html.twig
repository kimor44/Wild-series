{% extends 'base.html.twig' %}
{% block title %}All programs{% endblock %}
{% block body %}
    <div class="container">
        <h1>Faire une recherche</h1>
        {{ form_start(form) }}
        {{ form_row(form.searchField) }}
        <button type="submit" name="btnSearch" class="btn btn-primary">Rechercher</button>
        {{ form_end(form) }}
        <h1>Toutes les séries de la table program : </h1>
        {% for program in programs %}
            <div>
                <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <p>{{ program.summary }}</p>
                {# , {slug: program.title} #}
                <p>
                    <a href="{{ path('wild_show', {slug: program.slug}) }}"
                       class="btn btn-primary">Voir la fiche</a>
                    <a href="{{ path('wild_show_program', {programName: program.slug}) }}"
                       class="btn btn-secondary">Voir les saisons</a>
                </p>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}
